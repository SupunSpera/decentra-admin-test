  "item": [
    {
      "name": "1. Customer Management",
      "item": [
        {
          "name": "Create Customer (Auto Tree Placement)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.success && jsonData.customer) {",
                  "        pm.collectionVariables.set('customer_id', jsonData.customer.id);",
                  "        pm.environment.set('last_customer_id', jsonData.customer.id);",
                  "        pm.environment.set('last_referral_code', jsonData.customer.referral_code);",
                  "        console.log('Customer ID saved: ' + jsonData.customer.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe{{$timestamp}}@example.com\",\n  \"telephone\": \"1234567890\",\n  \"mobile\": \"0987654321\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/testing/customer/create",
              "host": ["{{base_url}}"],
              "path": ["api", "testing", "customer", "create"]
            },
            "description": "Creates a new customer and automatically adds them to the binary referral tree"
          },
          "response": []
        },
        {
          "name": "Get Customer Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/testing/customer/details?customer_id={{customer_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "testing", "customer", "details"],
              "query": [
                {
                  "key": "customer_id",
                  "value": "{{customer_id}}"
                }
              ]
            },
            "description": "Get detailed customer information including tree relationships"
          },
          "response": []
        },
        {
          "name": "Create Root Customer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.success && jsonData.customer) {",
                  "        pm.collectionVariables.set('customer_id', jsonData.customer.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Root\",\n  \"last_name\": \"User\",\n  \"email\": \"root{{$timestamp}}@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/testing/customer/create",
              "host": ["{{base_url}}"],
              "path": ["api", "testing", "customer", "create"]
            },
            "description": "Creates the first customer as the root of the tree"
          },
          "response": []
        },
